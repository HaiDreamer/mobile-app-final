<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="6dp" android:gravity="start" android:orientation="vertical">
    <TextView android:id="@+id/dmUser" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textStyle="bold" android:textColor="@color/dm_accent_other" android:textSize="12sp" />
    <TextView android:id="@+id/dmText" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:background="@drawable/dm_bubble_other" android:padding="10dp" android:textColor="@color/dm_text_normal"/>
</LinearLayout>
