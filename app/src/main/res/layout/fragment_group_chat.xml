<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary">

    <!-- RecyclerView show group message -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groupRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="76dp"
        android:paddingHorizontal="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- Message bar -->
    <LinearLayout
        android:id="@+id/inputBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@color/bg_elev">

        <!-- Button choose image -->
        <ImageButton
            android:id="@+id/btnPickImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/pick_image"
            android:src="@android:drawable/ic_menu_camera"
            app:tint="@color/text_muted" />

        <!-- Button choose file -->
        <ImageButton
            android:id="@+id/btnPickFile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/pick_file"
            android:src="@android:drawable/ic_menu_upload"
            app:tint="@color/text_muted" />

        <!-- Enter message -->
        <EditText
            android:id="@+id/etGroupInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:autofillHints=""
            android:hint="@string/hint_group"
            android:textColor="@color/text_normal"
            android:textColorHint="@color/text_muted"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="12dp"
            android:singleLine="false"
            android:maxLines="4"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/cursor_white"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <!-- Send button -->
        <ImageButton
            android:id="@+id/btnGroupSend"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/send_bg"
            android:contentDescription="@string/send_desc"
            android:src="@android:drawable/ic_menu_send"
            app:tint="@android:color/white" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
